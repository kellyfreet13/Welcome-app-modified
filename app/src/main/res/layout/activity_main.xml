<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kelly.welcome_app.MainActivity"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/greeting_message"
        android:layout_width="196dp"
        android:layout_height="125dp"
        android:gravity="center"
        android:text="@string/greeting_message"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/light_black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_picture"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_picture"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/about_me" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="130dp"
        android:layout_height="118dp"
        android:contentDescription="@string/profile_picture_failed_to_load"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/about_me"
        android:layout_width="295dp"
        android:layout_height="167dp"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="152dp"
        android:contentDescription="@string/about_me_failed_to_load"
        android:text="@string/about_me"
        android:textColor="@color/light_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="424dp"
        android:layout_height="151dp"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="324dp"
        android:contentDescription="@string/star_wars_failed_to_load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star_wars_terminal_movie"
        tools:layout_editor_absoluteX="-42dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

</android.support.constraint.ConstraintLayout>
